spring.cloud.gateway.routes[3].filters[0].args.fallbackUri=forward:/fallback/order

spring.cloud.gateway.routes[4].id=payment-service
spring.cloud.gateway.routes[4].uri=lb://payment-service
spring.cloud.gateway.routes[4].predicates[0]=Path=/api/payments/**,/api/razorpay/**
spring.cloud.gateway.routes[4].filters[0].name=CircuitBreaker
